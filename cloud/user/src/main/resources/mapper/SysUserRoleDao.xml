<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.falser.cloud.user.dao.SysUserRoleDao">

    <select id="getPermissionListByUserId" resultType="com.falser.cloud.user.entity.SysPermission">
        SELECT t1.*
        FROM `sys_permission` t1
                 LEFT JOIN `sys_role_permission` t2 ON t2.permission_id = t1.id
        WHERE t2.role_id = #{roleId}
    </select>
</mapper>

